@model dynamic

  
<div class="container mb-4">
    <div id="searchContainer" class="search-container floating-box p-4 border rounded shadow-sm bg-light">
        <div class="input-group">
            <input type="text" id="searchInput" class="form-control" placeholder="Enter word or sentence to search" />
 
        </div>

        <div id="loadingIndicator" class="mt-3 text-center" style="display:none;">
            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            Searching OCR text...
        </div>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <button class="btn btn-secondary" id="previousButton" style="display:none;">
                Previous Match
            </button>

            <div id="resultInfo" class="text-center flex-grow-1 mx-3"></div>

            <button class="btn btn-secondary" id="nextButton" style="display:none;">
                Next Match
            </button>
        </div>
    </div>
</div>

<!-- Image Container for OCR -->
<div id="imageContainer" class="text-center">
    <img src="/images/sample.jpg" alt="Original Image" id="originalImage" class="searchable-img img-fluid"  />
</div>
<script src="~/js/Tesseract.js" asp-append-version="true"></script>
