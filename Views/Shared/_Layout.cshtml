<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WordSpotter</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WordSpotter.styles.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item nav-item-backend me-3">
                        <a class="nav-link @((ViewContext.RouteData.Values["controller"].ToString() == "Tesseract") ? "active-backend " : "") btn" asp-action="Index" asp-controller="Tesseract">Tesseract (Backend)</a>
                    </li>
                    <li class="nav-item me-3">
                        <a class="nav-link @((ViewContext.RouteData.Values["controller"].ToString() == "Home") ? "active" : "") btn" href="/">Home</a>
                    </li>
                    <li class="nav-item nav-item-frontend">
                        <a class="nav-link @((ViewContext.RouteData.Values["controller"].ToString() == "JSTesseract") ? "active-frontend" : "") btn" asp-action="Index" asp-controller="JSTesseract">Tesseract.js (Frontend)</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center mt-4">
        <p>&copy; @DateTime.Now.Year WordSpotter - All Rights Reserved.</p>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
