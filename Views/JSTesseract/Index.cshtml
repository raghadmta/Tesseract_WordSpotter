@{
    ViewData["Title"] = "Image Search and Highlight";
}<div class="container mt-4">

    <!-- Search Container -->
    <div id="searchContainer" class="search-container floating-box mb-4 p-4 border rounded shadow-sm bg-light">
        <div class="input-group">
            <input type="text" id="searchWord" class="form-control" placeholder="Enter word or sentence to search" />
            <button id="searchButton" onclick="startSearch()" class="btn btn-primary ms-2">
                <span id="searchButtonText">Search</span>
                <span id="loader" class="spinner-border spinner-border-sm ms-1" style="display:none;" role="status" aria-hidden="true"></span>
            </button>
        </div>

        <div id="searchNote" class="alert alert-info mt-3" role="alert" style="display: none;">
            Searching... please be patient.
        </div>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <button class="btn btn-secondary" id="prevMatch" onclick="prevMatch()">
                Previous Match
            </button>

            <div id="matchInfo" class="text-center flex-grow-1 mx-3"> </div>

            <button class="btn btn-secondary" id="nextMatch" onclick="nextMatch()">
                Next Match
            </button>
        </div>
    </div>

    <!-- Image Container -->
    <div class="image-container mb-4">
        <div id="imageWrapper" class="row d-flex justify-content-center">
            <div style="position: relative; width: 85%;">
                <img src="~/images/sample.jpg" class="searchable-img img-fluid" id="image1" draggable="false" />
                <canvas id="canvas(1)" style="position: absolute; top: 0; left: 0;"></canvas>
            </div>
        </div>
    </div>
</div>
<script src='https://cdn.jsdelivr.net/npm/tesseract.js@5/dist/tesseract.min.js'></script>
 <script src="~/js/JSTesseract.js"></script>
  
